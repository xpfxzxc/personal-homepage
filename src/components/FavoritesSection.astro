---
import type { Favorites } from '../types'
import FavoriteCard from './FavoriteCard.astro'

interface Props {
  favorites: Favorites
}

const { favorites } = Astro.props

const animeIconPath = 'M15 10l4.553-2.276A1 1 0 0121 8.618v6.764a1 1 0 01-1.447.894L15 14M5 18h8a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v8a2 2 0 002 2z'
const gameIconPath = 'M11 4a2 2 0 114 0v1a1 1 0 001 1h3a1 1 0 011 1v3a1 1 0 01-1 1h-1a2 2 0 100 4h1a1 1 0 011 1v3a1 1 0 01-1 1h-3a1 1 0 01-1-1v-1a2 2 0 10-4 0v1a1 1 0 01-1 1H7a1 1 0 01-1-1v-3a1 1 0 00-1-1H4a2 2 0 110-4h1a1 1 0 001-1V7a1 1 0 011-1h3a1 1 0 001-1V4z'
const musicIconPath = 'M9 19V6l12-3v13M9 19c0 1.105-1.343 2-3 2s-3-.895-3-2 1.343-2 3-2 3 .895 3 2zm12-3c0 1.105-1.343 2-3 2s-3-.895-3-2 1.343-2 3-2 3 .895 3 2zM9 10l12-3'
---

<section id="favorites" class="py-16 sm:py-24 bg-white/30 dark:bg-slate-900/30">
  <div class="max-w-5xl mx-auto px-4 sm:px-6">
    <h2 class="text-2xl sm:text-3xl font-bold text-slate-800 dark:text-white mb-8">喜欢的</h2>

    <!-- Anime -->
    <div class="mb-12">
      <h3 class="text-lg font-semibold text-slate-700 dark:text-slate-100 mb-4 flex items-center gap-2">
        <svg class="w-5 h-5 text-rose-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 4v16M17 4v16M3 8h4m10 0h4M3 12h18M3 16h4m10 0h4M4 20h16a1 1 0 001-1V5a1 1 0 00-1-1H4a1 1 0 00-1 1v14a1 1 0 001 1z" />
        </svg>
        番剧
      </h3>
      <div class="grid gap-4 sm:grid-cols-2 lg:grid-cols-3 items-start">
        {favorites.anime.map(item => (
          <FavoriteCard
            item={item}
            gradientFrom="from-rose-100 dark:from-rose-900/30"
            gradientTo="to-orange-100 dark:to-orange-900/30"
            iconColor="text-rose-400 dark:text-rose-500"
            iconPath={animeIconPath}
          />
        ))}
      </div>
    </div>

    <!-- Games -->
    <div class="mb-12">
      <h3 class="text-lg font-semibold text-slate-700 dark:text-slate-100 mb-4 flex items-center gap-2">
        <svg class="w-5 h-5 text-violet-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 4a2 2 0 114 0v1a1 1 0 001 1h3a1 1 0 011 1v3a1 1 0 01-1 1h-1a2 2 0 100 4h1a1 1 0 011 1v3a1 1 0 01-1 1h-3a1 1 0 01-1-1v-1a2 2 0 10-4 0v1a1 1 0 01-1 1H7a1 1 0 01-1-1v-3a1 1 0 00-1-1H4a2 2 0 110-4h1a1 1 0 001-1V7a1 1 0 011-1h3a1 1 0 001-1V4z" />
        </svg>
        游戏
      </h3>
      <div class="grid gap-4 sm:grid-cols-2 lg:grid-cols-3 items-start">
        {favorites.games.map(item => (
          <FavoriteCard
            item={item}
            gradientFrom="from-violet-100 dark:from-violet-900/30"
            gradientTo="to-indigo-100 dark:to-indigo-900/30"
            iconColor="text-violet-400 dark:text-violet-500"
            iconPath={gameIconPath}
          />
        ))}
      </div>
    </div>

    <!-- Music -->
    <div>
      <h3 class="text-lg font-semibold text-slate-700 dark:text-slate-100 mb-4 flex items-center gap-2">
        <svg class="w-5 h-5 text-cyan-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19V6l12-3v13M9 19c0 1.105-1.343 2-3 2s-3-.895-3-2 1.343-2 3-2 3 .895 3 2zm12-3c0 1.105-1.343 2-3 2s-3-.895-3-2 1.343-2 3-2 3 .895 3 2zM9 10l12-3" />
        </svg>
        音乐
      </h3>
      <div class="grid gap-4 sm:grid-cols-2 lg:grid-cols-3 items-start">
        {favorites.music.map(item => (
          <FavoriteCard
            item={item}
            gradientFrom="from-cyan-100 dark:from-cyan-900/30"
            gradientTo="to-teal-100 dark:to-teal-900/30"
            iconColor="text-cyan-400 dark:text-cyan-500"
            iconPath={musicIconPath}
          />
        ))}
      </div>
    </div>
  </div>
</section>
