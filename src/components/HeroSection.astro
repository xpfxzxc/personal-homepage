---
import type { SiteData } from '../types'

interface Props {
  siteData: SiteData
}

const { siteData } = Astro.props
---

<section id="about" class="min-h-[calc(100vh-3.5rem)] flex items-center py-16 sm:py-24">
  <div class="max-w-5xl mx-auto px-4 sm:px-6 w-full">
    <div class="flex flex-col lg:flex-row items-center gap-8 lg:gap-16">
      <!-- Avatar -->
      <div class="flex-shrink-0">
        <div class="w-32 h-32 sm:w-40 sm:h-40 rounded-full bg-gradient-to-br from-primary-200 to-accent-200 dark:from-primary-800 dark:to-accent-800 shadow-lg shadow-primary-200/50 dark:shadow-primary-900/30 flex items-center justify-center overflow-hidden img-skeleton-wrapper">
          <div class="img-skeleton skeleton rounded-full"></div>
          <img
            src="/images/avatar/avatar.jpg"
            alt={siteData.name}
            class="w-full h-full object-cover"
            loading="eager"
            onload="this.previousElementSibling.classList.add('loaded')"
            onerror="this.style.display='none';this.previousElementSibling.classList.add('loaded');this.nextElementSibling.style.display='block';"
          />
          <svg class="w-16 h-16 sm:w-20 sm:h-20 text-primary-400 dark:text-primary-500 hidden" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
          </svg>
        </div>
      </div>

      <!-- Info -->
      <div class="text-center lg:text-left flex-1">
        <h1 class="text-3xl sm:text-4xl font-bold text-slate-800 dark:text-white mb-3">{siteData.name}</h1>
        <p class="text-lg text-slate-600 dark:text-slate-200 mb-6">{siteData.intro}</p>

        <!-- Belief quote -->
        <blockquote class="relative bg-white/60 dark:bg-slate-800/80 backdrop-blur-sm rounded-xl p-5 shadow-lg shadow-slate-200/50 dark:shadow-none dark:border dark:border-slate-700/50 mb-6">
          <div class="absolute -top-2 -left-2 text-4xl text-primary-300 dark:text-primary-500 opacity-50">"</div>
          <p class="text-slate-700 dark:text-slate-100 italic pl-4">{siteData.belief}</p>
        </blockquote>

        <!-- Social links -->
        <div class="flex items-center justify-center lg:justify-start gap-4">
          <a href={siteData.github} target="_blank" rel="noopener noreferrer"
             class="inline-flex items-center gap-2 px-4 py-2 bg-slate-800 dark:bg-slate-700 text-white rounded-lg hover:bg-slate-700 dark:hover:bg-slate-600 transition-colors shadow-md cursor-pointer">
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
              <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
            </svg>
            GitHub
          </a>
          <a href={siteData.blog} target="_blank" rel="noopener noreferrer"
             class="inline-flex items-center gap-2 px-4 py-2 bg-white dark:bg-slate-800 text-slate-700 dark:text-slate-100 rounded-lg hover:bg-slate-50 dark:hover:bg-slate-700 transition-colors shadow-md cursor-pointer">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 20H5a2 2 0 01-2-2V6a2 2 0 012-2h10a2 2 0 012 2v1m2 13a2 2 0 01-2-2V7m2 13a2 2 0 002-2V9a2 2 0 00-2-2h-2m-4-3H9M7 16h6M7 8h6v4H7V8z" />
            </svg>
            博客
          </a>
        </div>
      </div>
    </div>

    <!-- GitHub Stats -->
    <div class="mt-12 lg:mt-16">
      <div class="bg-white/60 dark:bg-slate-800/80 backdrop-blur-sm rounded-2xl p-6 shadow-lg shadow-slate-200/50 dark:shadow-none dark:border dark:border-slate-700/50">
        <h3 class="text-sm font-medium text-slate-500 dark:text-slate-300 mb-4">GitHub Stats</h3>
        <div class="flex flex-col md:flex-row items-center justify-center gap-4">
          <div class="w-full max-w-md aspect-[495/195] img-skeleton-wrapper rounded-lg dark:hidden">
            <div class="img-skeleton skeleton rounded-lg"></div>
            <img
              src={`https://github-readme-stats.vercel.app/api?username=${siteData.name}&show_icons=true&hide_border=true&bg_color=00000000&title_color=0ea5e9&icon_color=0ea5e9&text_color=475569`}
              alt="GitHub Stats"
              class="w-full h-full object-contain"
              loading="lazy"
              onload="this.previousElementSibling.classList.add('loaded')"
              onerror="this.previousElementSibling.classList.add('loaded')"
            />
          </div>
          <div class="w-full max-w-md aspect-[495/195] img-skeleton-wrapper rounded-lg hidden dark:block">
            <div class="img-skeleton skeleton rounded-lg"></div>
            <img
              src={`https://github-readme-stats.vercel.app/api?username=${siteData.name}&show_icons=true&hide_border=true&bg_color=00000000&title_color=38bdf8&icon_color=38bdf8&text_color=94a3b8`}
              alt="GitHub Stats"
              class="w-full h-full object-contain"
              loading="lazy"
              onload="this.previousElementSibling.classList.add('loaded')"
              onerror="this.previousElementSibling.classList.add('loaded')"
            />
          </div>
          <div class="w-full max-w-md aspect-[495/195] img-skeleton-wrapper rounded-lg dark:hidden">
            <div class="img-skeleton skeleton rounded-lg"></div>
            <img
              src={`https://github-readme-streak-stats-rust-tau.vercel.app/?user=${siteData.name}&hide_border=true&background=00000000&ring=0ea5e9&fire=e879f9&currStreakLabel=0ea5e9&sideLabels=475569&currStreakNum=1e293b&sideNums=1e293b&dates=64748b`}
              alt="GitHub Streak Stats"
              class="w-full h-full object-contain"
              loading="lazy"
              onload="this.previousElementSibling.classList.add('loaded')"
              onerror="this.previousElementSibling.classList.add('loaded')"
            />
          </div>
          <div class="w-full max-w-md aspect-[495/195] img-skeleton-wrapper rounded-lg hidden dark:block">
            <div class="img-skeleton skeleton rounded-lg"></div>
            <img
              src={`https://github-readme-streak-stats-rust-tau.vercel.app/?user=${siteData.name}&hide_border=true&background=00000000&ring=38bdf8&fire=e879f9&currStreakLabel=38bdf8&sideLabels=94a3b8&currStreakNum=e2e8f0&sideNums=e2e8f0&dates=64748b`}
              alt="GitHub Streak Stats"
              class="w-full h-full object-contain"
              loading="lazy"
              onload="this.previousElementSibling.classList.add('loaded')"
              onerror="this.previousElementSibling.classList.add('loaded')"
            />
          </div>
        </div>
      </div>
    </div>

    <!-- GitHub Contributions -->
    <div class="mt-6">
      <div class="bg-white/60 dark:bg-slate-800/80 backdrop-blur-sm rounded-2xl p-6 shadow-lg shadow-slate-200/50 dark:shadow-none dark:border dark:border-slate-700/50">
        <h3 class="text-sm font-medium text-slate-500 dark:text-slate-300 mb-4">GitHub 贡献</h3>
        <div class="overflow-x-auto">
          <div class="w-full max-w-3xl mx-auto aspect-[53/7] img-skeleton-wrapper rounded-lg dark:hidden" style="min-width: 600px;">
            <div class="img-skeleton skeleton rounded-lg"></div>
            <img
              src={`https://ghchart.rshah.org/0ea5e9/${siteData.name}`}
              alt="GitHub Contributions"
              class="w-full h-full object-contain"
              loading="lazy"
              onload="this.previousElementSibling.classList.add('loaded')"
              onerror="this.previousElementSibling.classList.add('loaded')"
            />
          </div>
          <div class="w-full max-w-3xl mx-auto aspect-[53/7] img-skeleton-wrapper rounded-lg hidden dark:block" style="min-width: 600px;">
            <div class="img-skeleton skeleton rounded-lg"></div>
            <img
              src={`https://ghchart.rshah.org/38bdf8/${siteData.name}`}
              alt="GitHub Contributions"
              class="w-full h-full object-contain"
              loading="lazy"
              onload="this.previousElementSibling.classList.add('loaded')"
              onerror="this.previousElementSibling.classList.add('loaded')"
            />
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
