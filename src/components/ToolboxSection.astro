---
import type { LinkItem, AIToolCategory } from '../types'

interface Props {
  websites: LinkItem[]
  tools: LinkItem[]
  aiTools: AIToolCategory[]
}

const { websites, tools, aiTools } = Astro.props
---

<section id="toolbox" class="py-16 sm:py-24">
  <div class="max-w-5xl mx-auto px-4 sm:px-6">
    <h2 class="text-2xl sm:text-3xl font-bold text-slate-800 dark:text-white mb-8">工具箱</h2>

    <!-- Websites -->
    <div class="mb-12">
      <h3 class="text-lg font-semibold text-slate-700 dark:text-slate-100 mb-4 flex items-center gap-2">
        <svg class="w-5 h-5 text-blue-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 01-9 9m9-9a9 9 0 00-9-9m9 9H3m9 9a9 9 0 01-9-9m9 9c1.657 0 3-4.03 3-9s-1.343-9-3-9m0 18c-1.657 0-3-4.03-3-9s1.343-9 3-9m-9 9a9 9 0 019-9" />
        </svg>
        常用网站
      </h3>
      <div class="flex flex-wrap gap-3">
        {websites.map(item => (
          <a href={item.link} target="_blank" rel="noopener noreferrer"
             class="inline-flex items-center gap-2 px-4 py-2.5 bg-white/70 dark:bg-slate-800/80 backdrop-blur-sm rounded-xl shadow-md shadow-slate-200/40 dark:shadow-none dark:border dark:border-slate-700/50 hover:shadow-lg hover:shadow-slate-200/50 dark:hover:bg-slate-700/80 transition-all text-sm text-slate-700 dark:text-slate-100 hover:text-primary-600 dark:hover:text-primary-400 cursor-pointer">
            {item.icon ? (
              <img
                src={item.icon}
                alt={item.name}
                class="w-5 h-5 rounded object-contain"
                loading="lazy"
                onError="this.style.display='none';this.nextElementSibling.style.display='flex';"
              />
              <div class="w-5 h-5 rounded bg-gradient-to-br from-slate-100 to-slate-200 dark:from-slate-700 dark:to-slate-600 items-center justify-center text-xs hidden">
                {item.name.charAt(0)}
              </div>
            ) : (
              <div class="w-5 h-5 rounded bg-gradient-to-br from-slate-100 to-slate-200 dark:from-slate-700 dark:to-slate-600 flex items-center justify-center text-xs">
                {item.name.charAt(0)}
              </div>
            )}
            {item.name}
          </a>
        ))}
      </div>
    </div>

    <!-- Tools -->
    <div class="mb-12">
      <h3 class="text-lg font-semibold text-slate-700 dark:text-slate-100 mb-4 flex items-center gap-2">
        <svg class="w-5 h-5 text-slate-500 dark:text-slate-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z" />
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
        </svg>
        常用工具
      </h3>
      <div class="flex flex-wrap gap-3">
        {tools.map(item => (
          <a href={item.link} target="_blank" rel="noopener noreferrer"
             class="inline-flex items-center gap-2 px-4 py-2.5 bg-white/70 dark:bg-slate-800/80 backdrop-blur-sm rounded-xl shadow-md shadow-slate-200/40 dark:shadow-none dark:border dark:border-slate-700/50 hover:shadow-lg hover:shadow-slate-200/50 dark:hover:bg-slate-700/80 transition-all text-sm text-slate-700 dark:text-slate-100 hover:text-primary-600 dark:hover:text-primary-400 cursor-pointer">
            {item.icon ? (
              <img
                src={item.icon}
                alt={item.name}
                class="w-5 h-5 rounded object-contain"
                loading="lazy"
                onError="this.style.display='none';this.nextElementSibling.style.display='flex';"
              />
              <div class="w-5 h-5 rounded bg-gradient-to-br from-slate-100 to-slate-200 dark:from-slate-700 dark:to-slate-600 items-center justify-center text-xs hidden">
                {item.name.charAt(0)}
              </div>
            ) : (
              <div class="w-5 h-5 rounded bg-gradient-to-br from-slate-100 to-slate-200 dark:from-slate-700 dark:to-slate-600 flex items-center justify-center text-xs">
                {item.name.charAt(0)}
              </div>
            )}
            {item.name}
          </a>
        ))}
      </div>
    </div>

    <!-- AI Tools -->
    <div>
      <h3 class="text-lg font-semibold text-slate-700 dark:text-slate-100 mb-4 flex items-center gap-2">
        <svg class="w-5 h-5 text-purple-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z" />
        </svg>
        AI 工具
      </h3>
      <div class="grid gap-6 sm:grid-cols-2 lg:grid-cols-4">
        {aiTools.map(category => (
          <div class="bg-white/70 dark:bg-slate-800/80 backdrop-blur-sm rounded-xl p-4 shadow-md shadow-slate-200/40 dark:shadow-none dark:border dark:border-slate-700/50">
            <h4 class="text-sm font-medium text-slate-500 dark:text-slate-300 mb-3">{category.category}</h4>
            <div class="space-y-2">
              {category.items.map(item => (
                <a href={item.link} target="_blank" rel="noopener noreferrer"
                   class="flex items-center gap-2 px-3 py-2 rounded-lg hover:bg-slate-50 dark:hover:bg-slate-700/70 transition-colors text-sm text-slate-700 dark:text-slate-100 hover:text-primary-600 dark:hover:text-primary-400 cursor-pointer">
                  {item.icon ? (
                    <img
                      src={item.icon}
                      alt={item.name}
                      class="w-6 h-6 rounded-md object-contain"
                      loading="lazy"
                      onError="this.style.display='none';this.nextElementSibling.style.display='flex';"
                    />
                    <div class="w-6 h-6 rounded-md bg-gradient-to-br from-primary-100 to-accent-100 dark:from-primary-900/50 dark:to-accent-900/50 items-center justify-center text-xs font-medium text-primary-600 dark:text-primary-400 hidden">
                      {item.name.charAt(0)}
                    </div>
                  ) : (
                    <div class="w-6 h-6 rounded-md bg-gradient-to-br from-primary-100 to-accent-100 dark:from-primary-900/50 dark:to-accent-900/50 flex items-center justify-center text-xs font-medium text-primary-600 dark:text-primary-400">
                      {item.name.charAt(0)}
                    </div>
                  )}
                  {item.name}
                </a>
              ))}
            </div>
          </div>
        ))}
      </div>
    </div>
  </div>
</section>
