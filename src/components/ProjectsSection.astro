---
import type { Project } from '../types'
import ProjectCard from './ProjectCard.astro'

interface Props {
  projects: Project[]
  statusColors: Record<string, string>
}

const { projects, statusColors } = Astro.props
---

<section id="projects" class="py-16 sm:py-24">
  <div class="max-w-5xl mx-auto px-4 sm:px-6">
    <h2 class="text-2xl sm:text-3xl font-bold text-slate-800 dark:text-white mb-8">项目</h2>

    <div class="grid gap-6 sm:grid-cols-2 lg:grid-cols-3">
      {projects.map(project => (
        <ProjectCard project={project} statusColors={statusColors} />
      ))}
    </div>
  </div>
</section>
