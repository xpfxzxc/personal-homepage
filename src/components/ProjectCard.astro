---
import type { Project } from '../types'

interface Props {
  project: Project
  statusColors: Record<string, string>
}

const { project, statusColors } = Astro.props
---

<div class="group bg-white/70 backdrop-blur-sm rounded-2xl overflow-hidden shadow-lg shadow-slate-200/50 card-hover">
  {/* Cover image placeholder */}
  <div class="aspect-video bg-gradient-to-br from-primary-100 to-accent-100 flex items-center justify-center">
    <svg class="w-12 h-12 text-primary-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z" />
    </svg>
  </div>
  <div class="p-5">
    <div class="flex items-start justify-between gap-3 mb-2">
      <h3 class="font-semibold text-slate-800">{project.name}</h3>
      <span class={`flex-shrink-0 text-xs px-2 py-1 rounded-full ${statusColors[project.status] || 'bg-slate-100 text-slate-600'}`}>
        {project.status}
      </span>
    </div>
    <p class="text-sm text-slate-600">{project.description}</p>
    {project.link ? (
      <a href={project.link} target="_blank" rel="noopener noreferrer"
         class="inline-flex items-center gap-1 mt-4 text-sm text-primary-600 hover:text-primary-700">
        查看项目
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
        </svg>
      </a>
    ) : (
      <span class="inline-block mt-4 text-sm text-slate-400">敬请期待</span>
    )}
  </div>
</div>
